<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
	version="4.0">
	<display-name>Web Application from Archetype for Servlet 4.0</display-name>
	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>

	<!-- 設定文字編碼 -->
	<request-character-encoding>UTF-8</request-character-encoding>
	<response-character-encoding>UTF-8</response-character-encoding>

	<!-- 設定 ioc 容器 -->
	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>

	<!-- 設定以 java 組態方式設定 -->
	<context-param>
		<param-name>contextClass</param-name>
		<param-value>
org.springframework.web.context.support.AnnotationConfigWebApplicationContext
</param-value>
	</context-param>

	<!-- 指定 java 組態類別 -->
	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>common.config.SpringConfig, common.config.SpringDataConfig</param-value>
	</context-param>

	<!-- 註冊 OpenSessionInViewFilter 替代自定義的 Filter -->
	<filter>
		<filter-name>HibernateFilter</filter-name>
		<filter-class>
			org.springframework.orm.hibernate5.support.OpenSessionInViewFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>HibernateFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
</web-app>